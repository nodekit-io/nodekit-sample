{
    "id": "io.nodekit.nodekitsample",
    "version": "0.0.1",
    "$xmlns": "http://www.w3.org/ns/widgets",
    "$xmlns:ogn": "http://nodekit.io/ns/1.0",
    "name": "NodeKitSample",
    "description": "Sample NodeKit application used by Command Line tools",
    "author": {
        "value": "OffGrid Networks",
        "email": "info@nodekit.io",
        "href": "http://nodekit.io"
    },
    "content": {
        "src": "index.html"
    },
    "access": {
        "origin": "*"
    },
    "allow-intent": [
        "http://*/*",
        "https://*/*",
        "tel:*",
        "sms:*",
        "mailto:*",
        "geo:*",
        "internal:*"
    ],
    "platform": {
        "android": {
            "allow-intent": [
                "internal:*"
            ]
        },
        "ios": {
            "allow-intent": [
                "itms:*",
                "itms-apps:*"
            ]
        }
    }
}